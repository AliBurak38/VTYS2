declare @sayi int=10; 

if @sayi>10 
begin --süslü parantez açma anlamına gelir
print 'Sayi 10 dan buyuk';
print'Kosul saglandi'
end -- süslü parantez kapatma anlamına gelir
else if @sayi=10
print 'Sayi 10 a eşittir.'
else 
print'Sayi 10dan daha küçük';


declare @sayi1 int; 
declare @sayi2 int; 
declare @sayi3 int; 
set @sayi1=40;
set @sayi2=50;
set @sayi3=30;

if @sayi1>@sayi2 and @sayi1>@sayi3
begin 
print'Sayi 1 en büyük sayi';
end
else if @sayi2>@sayi1 and @sayi2>@sayi3
print 'Sayi 2 en büyük ';

else 
print 'Sayi 3 en büyük sayi';

declare @sayi4 int; 
set @sayi4=11;


if @sayi4<2
select @sayi4

else if @sayi4>=3 and @sayi4<=7
begin
declare @kare int; 
set @kare=@sayi4*@sayi4
select @kare;
end
else if @sayi4>=8 and @sayi4<=10
begin
declare @küp int; 
set @küp=@sayi4*@sayi4*@sayi4;
select @küp;
end
else if @sayi4>10
begin
declare @number int;
set @number= @sayi4*2;
select @number as 'Değer'
end

